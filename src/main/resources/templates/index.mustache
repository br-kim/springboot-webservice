{{>layout/header}}

    <h1><a class="btn btn-default btn-lg btn-block" href="/" >
        <span style="font-size:2.0em;">게시판</span>
    </a></h1>
    <div class="col-md-12">
        <!-- 로그인 기능 영역 -->
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#memberName}}
                    Logged in as : <span id="user">{{memberName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/memberName}}
                {{^memberName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                        Google Login
                    </a>
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">
                        Naver Login
                    </a>
                {{/memberName}}
            </div>
        </div>
        <!-- 목록 출력 영역 -->
        <div style="align-content: center">
            <table class="table table-horizontal table-bordered">
                <thead class="thead-strong">
                    <tr>
                        <th>게시글 번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>최종 수정일</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                {{#posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/view/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
                </tbody>
            </table>
        </div>
    </div>

{{>layout/footer}}